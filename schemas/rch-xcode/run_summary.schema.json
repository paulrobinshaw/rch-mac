{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/run_summary@1",
  "title": "Run Summary",
  "description": "Summary of a complete run execution.",
  "type": "object",
  "required": ["schema_version", "schema_id", "run_id", "status", "created_at", "updated_at"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/run_summary@1",
      "description": "Schema identifier"
    },
    "run_id": {
      "type": "string",
      "description": "Unique run identifier"
    },
    "status": {
      "type": "string",
      "enum": ["SUCCESS", "FAILED", "PARTIAL", "CANCELLED"],
      "description": "Overall run status"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the run started"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the run completed"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Total run duration"
    },
    "exit_code": {
      "type": "integer",
      "description": "Overall exit code"
    },
    "steps": {
      "type": "array",
      "description": "Summary of each step",
      "items": {
        "type": "object",
        "required": ["index", "job_id", "action", "status"],
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0
          },
          "job_id": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": ["build", "test"]
          },
          "status": {
            "type": "string",
            "enum": ["SUCCESS", "FAILED", "CANCELLED", "SKIPPED"]
          },
          "duration_ms": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "failure": {
      "type": "object",
      "description": "Failure details if run failed",
      "properties": {
        "kind": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "step_index": {
          "type": "integer"
        }
      }
    }
  }
}
