{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/worker_selection@1",
  "title": "Worker Selection",
  "description": "Worker selection decision artifact.",
  "type": "object",
  "required": ["schema_version", "schema_id", "created_at", "run_id", "mode", "selected_worker"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/worker_selection@1",
      "description": "Schema identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp"
    },
    "run_id": {
      "type": "string",
      "description": "Unique run identifier"
    },
    "mode": {
      "type": "string",
      "enum": ["deterministic", "round_robin", "adaptive"],
      "description": "Selection algorithm used"
    },
    "selected_worker": {
      "type": "object",
      "required": ["hostname", "worker_id"],
      "properties": {
        "hostname": {
          "type": "string"
        },
        "worker_id": {
          "type": "string"
        }
      }
    },
    "candidates": {
      "type": "array",
      "description": "Workers considered during selection",
      "items": {
        "type": "object",
        "properties": {
          "hostname": {
            "type": "string"
          },
          "worker_id": {
            "type": "string"
          },
          "score": {
            "type": "number"
          },
          "eligible": {
            "type": "boolean"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "Constraints applied during selection",
      "properties": {
        "xcode_version": {
          "type": "string"
        },
        "macos_version": {
          "type": "string"
        },
        "arch": {
          "type": "string"
        }
      }
    }
  }
}
