{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/attestation@1",
  "title": "Attestation",
  "description": "Cryptographic binding of job execution to artifacts.",
  "type": "object",
  "required": ["schema_version", "schema_id", "created_at", "job_id", "job_key", "run_id", "source_sha256", "manifest_sha256", "worker", "capabilities_digest", "backend"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/attestation@1",
      "description": "Schema identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp"
    },
    "run_id": {
      "type": "string",
      "description": "Unique run identifier"
    },
    "job_id": {
      "type": "string",
      "description": "Unique job identifier"
    },
    "job_key": {
      "type": "string",
      "description": "Deterministic job key for caching"
    },
    "source_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of source bundle"
    },
    "worker": {
      "type": "object",
      "required": ["name", "fingerprint"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Worker name (e.g., macmini-01)"
        },
        "fingerprint": {
          "type": "string",
          "description": "Stable worker fingerprint (e.g., SSH host key fingerprint)"
        }
      }
    },
    "capabilities_digest": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of capabilities.json content"
    },
    "backend": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["xcodebuild", "mcp"],
          "description": "Build backend type"
        },
        "version": {
          "type": "string",
          "description": "Backend version"
        }
      }
    },
    "manifest_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of manifest.json"
    },
    "signature": {
      "type": "string",
      "description": "Base64-encoded Ed25519 signature (present when signing is enabled)"
    },
    "pubkey_fingerprint": {
      "type": "string",
      "pattern": "^SHA256:[a-f0-9]{64}$",
      "description": "SHA256 fingerprint of signing public key (present when signing is enabled)"
    }
  }
}
