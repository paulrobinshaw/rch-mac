{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/attestation@1",
  "title": "Attestation",
  "description": "Cryptographic binding of job execution to artifacts.",
  "type": "object",
  "required": ["schema_version", "schema_id", "created_at", "job_id", "run_id", "manifest_sha256", "worker", "backend"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/attestation@1",
      "description": "Schema identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp"
    },
    "job_id": {
      "type": "string",
      "description": "Unique job identifier"
    },
    "run_id": {
      "type": "string",
      "description": "Unique run identifier"
    },
    "manifest_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of manifest.json"
    },
    "worker": {
      "type": "object",
      "required": ["hostname", "worker_id"],
      "properties": {
        "hostname": {
          "type": "string",
          "description": "Worker hostname"
        },
        "worker_id": {
          "type": "string",
          "description": "Worker identifier"
        }
      }
    },
    "backend": {
      "type": "object",
      "required": ["type", "version"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["xcodebuild", "mcp"],
          "description": "Build backend type"
        },
        "version": {
          "type": "string",
          "description": "Backend version"
        }
      }
    },
    "signature": {
      "type": "string",
      "description": "Optional Ed25519 signature (base64)"
    }
  }
}
