{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/toolchain@1",
  "title": "Toolchain",
  "description": "Xcode toolchain identity for job execution.",
  "type": "object",
  "required": ["schema_version", "schema_id", "xcode_version", "xcode_build", "macos_version", "arch"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/toolchain@1",
      "description": "Schema identifier"
    },
    "xcode_version": {
      "type": "string",
      "description": "Xcode version (e.g., 16.2)",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },
    "xcode_build": {
      "type": "string",
      "description": "Xcode build number (e.g., 16C5032a)"
    },
    "xcode_path": {
      "type": "string",
      "description": "Path to Xcode.app"
    },
    "macos_version": {
      "type": "string",
      "description": "macOS version (e.g., 15.3)"
    },
    "macos_build": {
      "type": "string",
      "description": "macOS build number"
    },
    "arch": {
      "type": "string",
      "enum": ["arm64", "x86_64"],
      "description": "CPU architecture"
    }
  }
}
