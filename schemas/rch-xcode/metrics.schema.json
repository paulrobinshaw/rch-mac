{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/metrics@1",
  "title": "Job Metrics",
  "description": "Performance metrics for a job execution.",
  "type": "object",
  "required": ["schema_version", "schema_id", "job_id", "run_id", "timings", "cache", "sizes"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/metrics@1",
      "description": "Schema identifier"
    },
    "job_id": {
      "type": "string",
      "description": "Unique job identifier"
    },
    "run_id": {
      "type": "string",
      "description": "Unique run identifier"
    },
    "timings": {
      "type": "object",
      "required": ["total_ms"],
      "properties": {
        "bundle_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time to create source bundle"
        },
        "upload_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time to upload source bundle"
        },
        "queue_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time waiting in queue"
        },
        "execute_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time executing the job"
        },
        "fetch_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Time fetching artifacts"
        },
        "total_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Total wall-clock time"
        }
      }
    },
    "cache": {
      "type": "object",
      "properties": {
        "derived_data_hit": {
          "type": "boolean",
          "description": "Whether DerivedData cache was hit"
        },
        "spm_hit": {
          "type": "boolean",
          "description": "Whether SPM cache was hit"
        },
        "result_cache_hit": {
          "type": "boolean",
          "description": "Whether result cache was hit"
        }
      }
    },
    "sizes": {
      "type": "object",
      "properties": {
        "source_bundle_bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Size of source bundle"
        },
        "artifact_bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Size of output artifacts"
        }
      }
    },
    "cache_key_components": {
      "type": "object",
      "properties": {
        "job_key": {
          "type": "string"
        },
        "xcode_build": {
          "type": "string"
        },
        "macos_major": {
          "type": "string"
        },
        "arch": {
          "type": "string"
        }
      }
    },
    "cache_paths": {
      "type": "object",
      "properties": {
        "derived_data": {
          "type": "string"
        },
        "spm": {
          "type": "string"
        }
      }
    }
  }
}
