{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rch-xcode/destination@1",
  "title": "Destination",
  "description": "Xcode destination for build/test execution.",
  "type": "object",
  "required": ["schema_version", "schema_id", "platform", "name"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version number"
    },
    "schema_id": {
      "type": "string",
      "const": "rch-xcode/destination@1",
      "description": "Schema identifier"
    },
    "platform": {
      "type": "string",
      "enum": ["iOS", "iOS Simulator", "macOS", "tvOS", "tvOS Simulator", "watchOS", "watchOS Simulator", "visionOS", "visionOS Simulator"],
      "description": "Target platform"
    },
    "name": {
      "type": "string",
      "description": "Device/simulator name"
    },
    "id": {
      "type": "string",
      "description": "Device UDID or simulator identifier"
    },
    "os": {
      "type": "string",
      "description": "OS version (e.g., 18.2)"
    },
    "variant": {
      "type": "string",
      "description": "Device variant"
    },
    "arch": {
      "type": "string",
      "enum": ["arm64", "x86_64"],
      "description": "Architecture"
    }
  }
}
